{% extends "session/layout.njk" %}
{% block head %}
  <title>Receitas - Foodfy</title>
{% endblock %}
{% block content %}

  <section class="login">
    <p class="title">Nova Senha</p>
    <form method="POST" action="/admin/users/password-reset">
      <div class="items">
        <div class="item">
          <p>Email</p>
          <div class="input">
            <input type="email" name="email" placeholder="Digite seu email" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')"/>
          </div>
        </div>
        <div class="item">
          <p>Nova senha</p>
          <div class="input">
            <input type="password" name="password" placeholder="Digite sua nova senha"/>
          </div>
        </div>
        <div class="item">
          <p>Repetir senha</p>
          <div class="input">
            <input type="password" name="passwordRepeat" placeholder="Repita sua senha"/>
          </div>
        </div>
      </div>
      <input type="hidden" name="token" value="{{token}}">
      <div class="actions">
        <a href="/admin/users/forgot-password"></a>
        <button>Nova Senha</button>
      </div>
    </form>
  </section>

{% endblock %}