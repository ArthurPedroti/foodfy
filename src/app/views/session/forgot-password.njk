{% extends "session/layout.njk" %}
{% block head %}
  <title>Receitas - Foodfy</title>
{% endblock %}
{% block content %}

  <section class="login">
    <p class="title">Esqueceu a Senha?</p>
    <form method="POST" action="/admin/users/forgot-password">
      <div class="items">
        <div class="item">
          <p>Email</p>
          <div class="input">
            <input type="email" name="email" placeholder="Digite seu email" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')"/>
          </div>
        </div>
      </div>
      <div class="actions">
        <a href="/admin/users/forgot-password"></a>
        <button>Recuperar</button>
      </div>
    </form>
  </section>

{% endblock %}